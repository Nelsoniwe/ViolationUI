<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI.Pages.ChoosePage"
             Title="ChoosePage">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>
    <VerticalStackLayout>
        <Button Text="Create Application" Clicked="CreateApplicationButton_Clicked" Margin="10"/>
        <Button Text="Show your Applications" Clicked="ShowOwnApplicationButton_Clicked" Margin="10"/>
        <Button Text="Resolve Applications" x:Name="ResolveApplications" Margin="10" Clicked="ResolveApplicationButton_Clicked"/>
        <Button Text="Logout" Margin="10" Clicked="LogoutButton_Clicked"/>
    </VerticalStackLayout>
</ContentPage>