<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI.MainPage">
    <StackLayout Margin="20">
        <Label Text="Login" FontSize="Large" Margin="10"/>
        <Entry Placeholder="Email" x:Name="emailEntry" HorizontalTextAlignment="Center" Keyboard="Text" Margin="10" BackgroundColor="#F2F2F2"/>
        <Entry Placeholder="Password" x:Name="passwordEntry" HorizontalTextAlignment="Center" Keyboard="Text" IsPassword="True" Margin="10" BackgroundColor="#F2F2F2"/>
        <Button Text="Login" Margin="10" Clicked="LoginButton_Clicked"/>
        <Label Text="Don't have an account?" Margin="10"/>
        <Button Text="Register" Margin="10" Clicked="RegisterButton_Clicked"/>
    </StackLayout>
</ContentPage>
