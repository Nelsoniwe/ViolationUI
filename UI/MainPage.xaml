<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI.MainPage"
             Title="Вхід">
    <StackLayout Margin="20">
        <Entry Placeholder="Електронна пошта" x:Name="emailEntry" HorizontalTextAlignment="Center" Keyboard="Text" Margin="10" BackgroundColor="#F2F2F2"/>
        <Entry Placeholder="Пароль" x:Name="passwordEntry" HorizontalTextAlignment="Center" Keyboard="Text" IsPassword="True" Margin="10" BackgroundColor="#F2F2F2"/>
        <Button Text="Увійти" Margin="10" Clicked="LoginButton_Clicked"/>
        <Label Text="Не маєте облікового запису?" Margin="10"/>
        <Button Text="Зареєструватися" Margin="10" Clicked="RegisterButton_Clicked"/>
    </StackLayout>
</ContentPage>
